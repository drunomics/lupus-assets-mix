{% set short_text = content.field_short_text|render %}

{% embed '@content/short-news/short-news--image.twig' with {
  'teaser': {
    'view_mode': display_mode,
    'headline': content.name,
    'text': short_text,
    'url': link_url
  },
  'link_display': false,
} %}

  {% block image %}
    <div class="teaser-box__image teaser-box-image__image">{{ image }}</div>
  {% endblock %}

{% endembed %}
