{#
/**
 * @file
 * Paragraph documents field.
 */
#}
{% spaceless %}
  {% set links = [] %}
  {% set link_base_classes = [] %}

  {% for item in items %}
    {# For some reason we need to use 2 backslashes for escaping. #}
    {% set link = item.content|merge({
      classes: link_classes,
      icon: 'file-text-o',
      new_window: attribute(item.content, '#url').toString() matches "/\\.pdf(\\?.*?)?$/i",
    }) %}
    {% set links = links|merge([link]) %}
  {% endfor %}

  {% include '@content/list-links/list-links.twig' with {
    links: links,
  } %}
{% endspaceless %}
