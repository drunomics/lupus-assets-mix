{#
/**
 * @file
 * Default site page template.
 *
 * Available variables:
 * - notifications: Items for notifications region.
 * - header: Items for the header region.
 * - content_top: The content top area of the current page.
 * - content: The main content of the current page.
 * - sidebar_first: Items for the sidebar_first region.
 * - sidebar_second: Items for the sidebar_second region.
 * - footer: Items for the footer region.
 * - style: page style.
 */
#}
{% set classes = [
  'site',
  style ? 'site--' ~ style,
  classname ? 'site--section-' ~ classname
] %}

<div id="site" class="{{ classes|join(' ') }}">

  {# Notifications #}
  {% if notifications %}
    <section class="site__notifications">
      {% block notifications %}
        {{ notifications }}
      {% endblock %}
    </section>
  {% endif %}

  {# Header #}
  {% block header %}
    {{ header }}
  {% endblock %}

  {# Breadcrumb #}
  <section class="site__breadcrumb">
    {% block breadcrumb %}
      {{ breadcrumb }}
    {% endblock %}
  </section>

  <div class="site__main{{ sidebar_second ? ' site__main--sidebar' : '' }}">

    {# Content wrapper #}
    <div class="site__content{{ sidebar_first ? ' site__content--sidebar' : '' }}">

      {# Content top #}
      {% if content_top %}
        <section class="site__content-top">
          {% block content_top %}
            {{ content_top }}
          {% endblock %}
        </section>
      {% endif %}

      {# Main content #}
      <main class="site__content-main" role="main">
        <a id="main-content" tabindex="-1"></a>{# link is in html.html.twig #}
        {% block content %}
          {{ content }}
        {% endblock %}
      </main>

      {# Sidebar first #}
      {% if sidebar_first %}
        <section class="site__first-sidebar">
          {% block sidebar_first %}
            {{ sidebar_first }}
          {% endblock %}
        </section>
      {% endif %}

    </div>

    {# Sidebar second #}
    {% if sidebar_second %}
      <section class="site__second-sidebar">
      {% block sidebar_second %}
        {{ sidebar_second }}
      {% endblock %}
      </section>
    {% endif %}
  </div>

  {# Footer #}
  {% block footer %}
    {{ footer }}
  {% endblock %}
</div>
