{#
/**
 * @file
 * Short contact information about a user. This is used in the news template for
 * the news extra contact block. The user's image is not part of the contact_card
 * template because we want the news-extra site component to be able to add images
 * above its content, which is what we use for contact.
 *
 * Available variables:
 * - image: The person's profile image.
 * - title: The card's title.
 * - name: The person's name.
 * - position: The job title.
 * - phone: The person's phone number in the company.
 * - mobile: The person's mobile number in the company.
 * - email: The email address.
 */
#}
<section class="profile">
  <div class="profile__content-main">
  {% if image %}
    <div class="profile__image">{{ image }} {{ image_link }}</div>
  {% endif %}
    <div class="profile__main">
      {% if password_reset_url %}
        <a class="profile__password-reset" href="{{ password_reset_url }}">{{ 'Set / reset password'|t }}</a>
      {% endif %}
      {% if name %}
        <h2 class="profile__name">{{ name }}</h2>
      {% endif %}
      {% if position %}
        <div class="profile__position">{{ position }}</div>
      {% endif %}
      {% if position %}
        <div class="profile__language">{{ language }}</div>
      {% endif %}
      {% spaceless %}
        <ul class="profile__links">
          {% if phone %}
            <li class="profile__links-item">
              {% include '@atoms/link/link.twig' with {
              icon: 'phone',
              title: phone,
              url: 'tel:' ~ phone,
              classes: ['profile__link'],
              } %}
            </li>
          {% endif %}
          {% if mobile %}
            <li class="profile__links-item">
              {% include '@atoms/link/link.twig' with {
              icon: 'phone',
              title: mobile,
              url: 'tel:' ~ mobile,
              classes: ['profile__link'],
              } %}
            </li>
          {% endif %}
          <li class="profile__links-item">
            {% include '@atoms/link/link.twig' with {
            icon: 'envelope',
            title: email,
            url: 'mailto:' ~ email,
            classes: ['profile__link'],
            } %}
          </li>
        </ul>
      {% endspaceless %}
    </div>
  </div>

  <div class="profile__employer">
    {% if title_employer %}
      <h3 class="profile__employer-title">{{ title_employer }}</h3>
    {% endif %}
    {% if employer_longname %}
      <p class="profile__employer-longname">{{ employer_longname }}</p>
    {% endif %}
    {% if employer_shortname %}
      <p class="profile__employer-shortname">{{ employer_shortname }}</p>
    {% endif %}
  </div>

  <div class="profile__workplace">
    {% if title_workplace %}
      <h3 class="profile__workplace-title">{{ title_workplace }}</h3>
    {% endif %}
    {% if workplace_name %}
      <div class="profile__workplace-name">{{ workplace_name }}</div>
    {% endif %}
    {% if workplace_street %}
      <div class="profile__workplace-street">{{ workplace_street }}</div>
    {% endif %}
    {% if workplace_zip or workplace_location %}
      <div class="profile__workplace-location">{{ workplace_zip }} {{ workplace_location }}</div>
    {% endif %}
  </div>
</section>
